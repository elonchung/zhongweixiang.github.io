#header
  text-shadow 0 0 1px #FFF
  margin-top 0px

  a
    color #999
    &:hover
      color color-link
      text-decoration none
  h1
    font-weight normal
    font-size 2.5em
    line-height 1
  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  #main-nav
    border-top 1px solid #DDD
    border-bottom 1px solid #DDD
    font-family font-title
    line-height 2.5em
    &.top_mode
      position: fixed
      top 0px
      left 0px
      right 0px
      z-index 5000
      background-color #fff
    ul
      list-style none
      margin-bottom 0
      li
        display inline-block
        padding: 3px 0px
        margin-right 10%
        a
          color #333
          font-size 16px
          &:hover
            color #258fb8




    

    
