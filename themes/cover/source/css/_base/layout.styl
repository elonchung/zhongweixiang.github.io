*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 14px
  text-shadow 0 0 1px transparent
  @media screen and (max-width: 600px)
    font-size 13px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em
.fa
  display inline
a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

p
  text-indent 2em

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.container 
  @media screen and (min-width: 1200px)
    width page-width

.jiathis_style 
  *
    box-sizing content-box
    -webkit-box-sizing content-box
    -moz-box-sizing content-box
    box-sizing content-box


.categories, .tags
  position relative
  margin-bottom 5px
  a, i 
    color color-meta
  a  
    &:hover
      color color-link
      text-decoration none

